{
  "compilerOptions": {
    "target": "es2015",
      "module": "commonjs",  
      "allowJs": true,
    "checkJs": true,                       
    "declaration": true,                   
    "declarationMap": true,               
    "sourceMap": true,                     
    "outDir": "./dist",                        
    "removeComments": true,                
    "strict": true,                           
    "moduleResolution": "node",           
    "allowSyntheticDefaultImports": true,  
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,        
  }
}
